@namespace FileFlows.Client.Components.Dialogs
@inherits VisibleEscapableComponent

<Modal Title="@Title" Visible="Visible">
    <Body>
        @if (string.IsNullOrEmpty(Message) == false)
        {
            <span>@Message</span>
        }
        <select id="@Uid" value="@SelectedIndex" @onchange="UpdateSelectedOption" style="display: block;width: 100%;margin: 0.5rem 0;">
            @foreach(var opt in Options)
            {
                <option value="@Options.IndexOf(opt)">@opt.Label</option>
            }
        </select>
    </Body>
    <Footer>
        <button class="btn" @onclick=@Accept>@lblOk</button>
        <button class="btn" @onclick=@Cancel>@lblCancel</button>
    </Footer>
</Modal>