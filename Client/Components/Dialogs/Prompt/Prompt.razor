@namespace FileFlows.Client.Components.Dialogs
@inherits VisibleEscapableComponent

<Modal Title="@Title" Visible="Visible">
    <Body>
        @if (string.IsNullOrEmpty(Message) == false)
        {
            <span>@Message</span>
        }
        <input type="text" id="@Uid" @onkeyup="OnKeyDown" @bind-value="Value" @bind-value:event="oninput"
               autocomplete="off" autofocus />
    </Body>
    <Footer>
        <button class="btn" @onclick=@Accept disabled=@string.IsNullOrWhiteSpace(Value)>@lblOk</button>
        <button class="btn" @onclick=@Cancel>@lblCancel</button>
    </Footer>
</Modal>