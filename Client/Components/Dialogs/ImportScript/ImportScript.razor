@namespace FileFlows.Client.Components.Dialogs
@inherits VisibleEscapableComponent

<Modal Title="@Title" Visible="Visible">

    <Body>
    <ul>
        @foreach (var opt in AvailableScript ?? new List<FileFlows.Plugin.ListOption>())
        {
            <li>
                <label>
                    <span>
                        <input type="checkbox" checked=@(CheckedItems.Contains(opt.Value) ? "checked" : null) @onchange="(e) => OnChange(e, opt)" @onclick:stopPropagation />
                    </span>
                    <span>@opt.Label</span>
                </label>
            </li>
        }
        </ul>
    </Body>
    <Footer>
        <button class="btn" @onclick=@Accept disabled="@(CheckedItems.Count > 0 ? null : "disabled")">@lblImport</button>
        <button class="btn" @onclick=@Cancel>@lblCancel</button>
    </Footer>
</Modal>