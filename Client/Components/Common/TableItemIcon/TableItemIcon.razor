@namespace FileFlows.Client.Components.Common

@if (Unwrapped)
{
    @if (string.IsNullOrWhiteSpace(Icon))
    {
        <i class="@DefaultIcon"></i>
    }
    else if (Icon.StartsWith("svg:"))
    {
        <img src="/icons/@(Icon[4..]).svg"/>
    }
    else if (Icon.StartsWith("data:") || Icon.EndsWith(".svg"))
    {
        <img src="@Icon"/>
    }
    else
    {
        var parts = Icon.Split(':');
        if (parts.Length == 2)
        {
            <i class="@parts[0]" style="color:@parts[1]"></i>
        }
        else
        {
            <i class="@Icon"></i>
        }
    }
    
}
else
{
    <span class="icon">

        @if (string.IsNullOrWhiteSpace(Icon))
        {
            <i class="icon @DefaultIcon"></i>
        }
        else if (Icon.StartsWith("svg:"))
        {
            <img src="/icons/@(Icon[4..]).svg"/>
        }
        else if (Icon.StartsWith("data:") || Icon.EndsWith(".svg"))
        {
            <img src="@Icon"/>
        }
        else
        {
            var parts = Icon.Split(':');
            if (parts.Length == 2)
            {
                <i class="icon @parts[0]" style="color:@parts[1]"></i>
            }
            else
            {
                <i class="icon @Icon"></i>
            }
        }
    </span>
}